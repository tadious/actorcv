extends layout

block content
  .row
    .col-sm-2
    .col-sm-8
      .form-box
        .form-top
          .form-top-left
            h3 Set your password
            p Enter password and confirm:
          .form-top-right
            i.fa.fa-lock
        .form-bottom
          form.login-form(role='form', method='post')
            input(type='hidden', name='_csrf', value=_csrf)
            .form-group
              label.sr-only(for='password') Password
              input.password.form-control#password(type='password', name='password', placeholder='Password...')
            .form-group
              label.sr-only(for='confirm') Confirm Password
              input.password.form-control#confirm(type='password', name='confirm', placeholder='Confirm Password...')
            button.btn(type='submit') Set Password!
      .social-login
        include partials/social-login
    .col-sm-2